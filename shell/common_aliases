# ls commands
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -l'

# General comands
alias die="sudo shutdown -P now"
alias df="df -h"

# I'm not sure how many ways I really need to exit the terminal
alias q="exit"
alias qa="exit"

# Git commands
alias g="git"
alias gs="git status"
alias gp="git push"

# Directory commands
alias ..='cd ..'

# Custom app launchers
alias music='python ~/apps/PlayMusicCL.py'
alias roku='python ~/apps/RokuRTerm.py'
