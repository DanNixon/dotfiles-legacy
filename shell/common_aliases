# ls commands
alias l="ls -lFh"
alias ll="ls -alFh"
alias la="ls -A"

# General comands
alias die="sudo shutdown -P now"
alias df="df -h"
alias du="du -h"

# I'm not sure how many ways I really need to exit the terminal
alias q="exit"
alias qa="exit"

# Git commands
alias g="git"
alias gs="git status"
alias gp="git push"

# Directory commands
alias ..="cd .."

# Misc app stuff
alias music="playmusiccl"
alias roku="python ~/apps/RokuRTerm.py"
alias ytdl="youtube-dl -t"

alias dbs="dropbox status"
alias dev="l /dev/ | grep"
alias stripexif="exiftool -all= "
alias calc="bc -lq"
alias irc="screen -dR irssi irssi"
