# ls commands
alias l="ls -lFh"
alias ll="ls -alFh"
alias la="ls -A"
alias ldev="l /dev/ | grep"

# General comands
alias die="sudo shutdown -P now"
alias rb="sudo shutdown -r now"

alias df="df -h"
alias du="du -h"

alias q="exit"
alias qa="exit"

# Git commands
alias g="git"
alias gs="git status"
alias gp="git push"

# Directory commands
alias ..="cd .."

# Misc app stuff
alias roku="python ~/apps/RokuRTerm.py"
alias ytdl="youtube-dl -t"
alias dbs="dropbox status"
alias stripexif="exiftool -all= "
alias calc="bc -lq"
alias search="find -L . -name"

# Apps used with screen
alias music="screen -dR PlayMusicCL playmusiccl"
alias irc="screen -dR irssi irssi"
alias s="screen -dR"
alias screens="screen -ls"
