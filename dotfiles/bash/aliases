# ls commands
alias l="ls -lFh"
alias ll="ls -alFh"
alias la="ls -A"
alias ldev="ls -lFh /dev/ | grep"
alias lmedia="tree -d -L 2 /media"

# General comands
alias die="sudo shutdown -P now"

alias df="df -h"
alias du="du -h"
alias free="free -h"
alias lb="lsblk"

alias q="exit"

# Git commands
alias g="git"
alias gs="git s"

# Directory commands
alias ..="cd .."

# Finding commands
alias fif="grep -rnw . -e"

# udisks
alias udm="udisksctl mount -b"
alias udum="udisksctl unmount -b"

# Screen
alias s="screen"
alias sls="screen -ls"
alias ss="screen -S"

# Bookmarks
alias bm="voile"
alias bmadd="voile add -cae"

# Misc app stuff
alias v="nvim"
alias t="todo.sh"
alias m="ncmpcpp"
