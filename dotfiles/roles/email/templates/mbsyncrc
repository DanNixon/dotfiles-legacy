# GMail

IMAPAccount gmail
Host        "imap.gmail.com"
SSLType     IMAPS
User        "{{ lookup('community.general.passwordstore', 'Passwords/Personal/google/email') }}"
PassCmd     "pass Passwords/Personal/google/email_password"

IMAPStore gmail-remote
Account   gmail

MaildirStore  gmail-local
Subfolders    Verbatim
Path          "~/.mail/gmail/"
Inbox         "~/.mail/gmail/Inbox"

Channel   gmail
Far       :gmail-remote:
Near      :gmail-local:
Patterns  * !"[Google Mail]/All Mail" !"[Google Mail]/All mail"
Create    Both
SyncState *


# ProtonMail

IMAPAccount     protonmail
Host            "127.0.0.1"
Port            1143
SSLType         STARTTLS
CertificateFile "~/.config/protonmail/bridge/cert.pem"
User            "{{ lookup('community.general.passwordstore', 'Passwords/Personal/ProtonMail/Email2') }}"
PassCmd         "pass ansible_secrets/protonmail_bridge_password"

IMAPStore protonmail-remote
Account   protonmail

MaildirStore  protonmail-local
Subfolders    Verbatim
Path          "~/.mail/protonmail/"
Inbox         "~/.mail/protonmail/Inbox"

Channel   protonmail
Far       :protonmail-remote:
Near      :protonmail-local:
Patterns  * !"All Mail"
Create    Both
SyncState *
