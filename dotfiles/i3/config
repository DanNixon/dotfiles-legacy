# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base01 $base0D $base00 $base0A $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base03 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

# Start Compton
exec --no-startup-id compton

# Start Polybar
exec_always --no-startup-id polybar-launch

# Set background image
exec --no-startup-id $HOME/.fehbg

# Use Super_L as mod key
set $mod Mod4

# Magic numbers
set $d_px 100
set $d_ppt 10

# Font for window titles (some popup/floating windows still show titles)
font pango:DejaVuSansMono Nerd Font Bold 10

# No title bars
default_border pixel 1

# Window gaps
gaps outer -2
gaps inner 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Kill focused window
bindsym $mod+Shift+Q kill

# Show launcher
bindsym $mod+d exec rofi -show run

# Show window switcher
bindsym $mod+w exec rofi -show window

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Arrow key change focus bindings
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

# Move focused window
bindsym $mod+Shift+H move left  $d_px
bindsym $mod+Shift+J move down  $d_px
bindsym $mod+Shift+K move up    $d_px
bindsym $mod+Shift+L move right $d_px

# Arrow key move window bindings
bindsym $mod+Shift+Left   move left   $d_px
bindsym $mod+Shift+Down   move down   $d_px
bindsym $mod+Shift+Up     move up     $d_px
bindsym $mod+Shift+Right  move right  $d_px

# Set split orientation
bindsym $mod+b split h
bindsym $mod+v split v

# Toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus parent / child containers
bindsym $mod+Shift+a  focus parent
bindsym $mod+a        focus child

# Switch to workspace
bindsym $mod+comma  workspace prev
bindsym $mod+period workspace next
bindsym $mod+1      workspace 1
bindsym $mod+2      workspace 2
bindsym $mod+3      workspace 3
bindsym $mod+4      workspace 4
bindsym $mod+5      workspace 5
bindsym $mod+6      workspace 6
bindsym $mod+7      workspace 7
bindsym $mod+8      workspace 8
bindsym $mod+9      workspace 9
bindsym $mod+0      workspace 10

# Move focused container to workspace
bindsym $mod+Shift+exclam       move workspace 1
bindsym $mod+Shift+quotedbl     move workspace 2
bindsym $mod+Shift+sterling     move workspace 3
bindsym $mod+Shift+dollar       move workspace 4
bindsym $mod+Shift+percent      move workspace 5
bindsym $mod+Shift+asciicircum  move workspace 6
bindsym $mod+Shift+ampersand    move workspace 7
bindsym $mod+Shift+asterisk     move workspace 8
bindsym $mod+Shift+parenleft    move workspace 9
bindsym $mod+Shift+parenright   move workspace 10

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# Resize window
mode resize {
  # These bindings trigger as soon as you enter the resize mode

  # They resize the border in the direction you pressed, e.g.
  # when pressing left, the window is resized so that it has
  # more space on its left

  bindsym h           resize shrink left  $d_px px or $d_ppt ppt
  bindsym Shift+H     resize grow   left  $d_px px or $d_ppt ppt

  bindsym j           resize shrink down  $d_px px or $d_ppt ppt
  bindsym Shift+J     resize grow   down  $d_px px or $d_ppt ppt

  bindsym k           resize shrink up    $d_px px or $d_ppt ppt
  bindsym Shift+K     resize grow   up    $d_px px or $d_ppt ppt

  bindsym l           resize shrink right $d_px px or $d_ppt ppt
  bindsym Shift+L     resize grow   right $d_px px or $d_ppt ppt

  # Arrow key bindings
  bindsym Left        resize shrink left  $d_px px or $d_ppt ppt
  bindsym Shift+Left  resize grow   left  $d_px px or $d_ppt ppt

  bindsym Down        resize shrink down  $d_px px or $d_ppt ppt
  bindsym Shift+Down  resize grow   down  $d_px px or $d_ppt ppt

  bindsym Up          resize shrink up    $d_px px or $d_ppt ppt
  bindsym Shift+Up    resize grow   up    $d_px px or $d_ppt ppt

  bindsym Right       resize shrink right $d_px px or $d_ppt ppt
  bindsym Shift+Right resize grow   right $d_px px or $d_ppt ppt

  # Enter or Escape to go back to normal
  bindsym Return      mode default
  bindsym Escape      mode default
}

bindsym $mod+r mode resize

# Lock shortcut
bindsym $mod+Escape exec i3lock -d -c 182040

# Move workspace to display
bindsym $mod+Shift+less     move workspace to output left
bindsym $mod+Shift+greater  move workspace to output right

# Screenshot shortcut
bindsym $mod+Shift+p exec scrot -z

# Application shortcuts
bindsym $mod+Return     exec alacritty
bindsym $mod+backslash  exec alacritty
bindsym $mod+x          exec firefox --private-window
bindsym $mod+Shift+x    exec firefox
bindsym $mod+p          exec pass-clip

# Audio controls (pulseaudio)
bindsym $mod+plus               exec --no-startup-id pa.sh v +5%
bindsym $mod+minus              exec --no-startup-id pa.sh v -5%
bindsym $mod+Shift+underscore   exec --no-startup-id pa.sh m toggle
bindsym XF86AudioRaiseVolume    exec --no-startup-id pa.sh v +5%
bindsym XF86AudioLowerVolume    exec --no-startup-id pa.sh v -5%
bindsym XF86AudioMute           exec --no-startup-id pa.sh m toggle

# Media controls
bindsym $mod+m          exec --no-startup-id media.sh pause
bindsym XF86AudioPause  exec --no-startup-id media.sh pause
bindsym XF86AudioPrev   exec --no-startup-id media.sh prev
bindsym XF86AudioNext   exec --no-startup-id media.sh next
bindsym XF86AudioStop   exec --no-startup-id media.sh stop

# Screen backlight controls
bindsym XF86MonBrightnessUp   exec --no-startup-id light -A 5
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5
