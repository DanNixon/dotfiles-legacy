startup_message off

defutf8 on
defencoding utf-8

autodetach on
vbell off
defscrollback 5000

hardstatus on
hardstatus alwayslastline
hardstatus string "%{= kG} %S (#%n)%?%=%Y/%m/%d %c:%s  "

deflog on
logfile $HOME/screenlogs/screenlog.%t
logtstamp on

termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
term 'xterm-256color'
