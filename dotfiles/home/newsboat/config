error-log "~/.newsboat/error.log"

color background          default   default
color listnormal          default   default
color listnormal_unread   default   default
color listfocus           blue      default   bold
color listfocus_unread    blue      default   bold
color info                yellow    default   underline
color article             default   default

bind-key h quit
bind-key j down
bind-key k up
bind-key l open

max-items 100

bookmark-cmd          "voile add-newsboat --edit"
bookmark-interactive  yes

browser "firefox --private-window %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "firefox --private-window %u"
