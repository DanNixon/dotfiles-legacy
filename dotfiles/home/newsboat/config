error-log "~/.newsboat/error.log"

color background          white   black
color listnormal          white   black
color listnormal_unread   white   black
color listfocus           black   yellow
color listfocus_unread    black   yellow
color info                yellow  black   underline
color article             white   black

unbind-key ENTER
bind-key h quit
bind-key j down
bind-key k up
bind-key l open

auto-reload yes
max-items 100

bookmark-cmd          "voile add-newsboat --edit"
bookmark-interactive  yes

browser "firefox --private-window %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "firefox --private-window %u"
