[colours]
background = #a4000000
foreground = #eeeeee

foreground-good = #aaddaa
foreground-indifferent = #ffeeaa
foreground-bad = #ffaaaa

[bar/main]
monitor = ${env:MONITOR:}

height = 24
bottom = false

font-0 = DejaVuSansMono Nerd Font:size=12;2
font-1 = unifont:size=12;2

background = ${colours.background}
foreground = ${colours.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

modules-left = i3
modules-center = datetime
modules-right = syncthing wireless-network cpu_temp memory load battery backlight volume

tray-position = right

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
wrapping-scroll = false
ws-icon-default = 类

label-mode = [%mode%]
label-mode-padding = 1
label-mode-foreground = ${colours.foreground}
label-mode-background = ${colours.background}

label-focused = %icon% %index%
label-focused-padding = 1
label-focused-foreground = ${colours.foreground}

label-unfocused = %icon% %index%
label-unfocused-padding = 1
label-unfocused-foreground = #808080

label-visible = %icon% %index%
label-visible-padding = 1
label-visible-foreground = #808080

label-urgent = %icon% %index%
label-urgent-padding = 1
label-urgent-foreground = ${colours.foreground-bad}

[module/datetime]
type = internal/date
interval = 0.5
label = %date%
date = " %Y-%m-%d %H:%M:%S"

[module/memory]
type = internal/memory
format-prefix = "﬙ "

[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = 墳 %percentage%%

format-muted = 婢 <label-muted>
label-muted = mute
label-muted-foreground = ${colours.foreground-indifferent}

[module/battery]
type = internal/battery
interval = 5

battery = BAT0
adapter = ADP0
full-at = 99

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
label-charging-foreground = ${colours.foreground-good}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%

format-full =  <label-full>
label-full = Full
label-full-foreground = ${colours.foreground-good}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 

[module/load]
type = custom/script
interval = 5
format-prefix = " "
exec = cat /proc/loadavg | awk '{print $1" "$2" "$3}'

[module/wired-network]
type = internal/network
interface = eno1

format-connected = <label-connected>
label-connected = 

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-foreground = ${colours.foreground-bad}

[module/wireless-network]
type = internal/network
interface = wlan1

format-connected = <label-connected>
label-connected = 直 %essid%

format-disconnected = <label-disconnected>
label-disconnected = 睊
label-disconnected-foreground = ${colours.foreground-bad}

[module/mpd]
type = internal/mpd

icon-play = 
icon-pause = 

label-song = ﴁ %artist% ﱘ %title%
format-online = <toggle> <label-song>

[module/syncthing]
type = custom/script
exec = ~/.config/polybar/syncthing_status.sh
interval = 10

[module/vpn]
type = custom/script
exec = ~/.config/polybar/vpn_status.sh
interval = 10

[module/backlight]
type = custom/script
format =  <label>%
exec = light | cut --delimiter="." --fields="1"
scroll-up = light -A 5
scroll-down = light -U 5

[module/cpu_temp]
type = custom/script
exec = ~/.config/polybar/sensor.sh coretemp-isa-0000 temp 1
