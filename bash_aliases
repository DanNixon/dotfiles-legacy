# Custom app launchers
alias music='python ~/apps/PlayMusicCL.py'
alias roku='python ~/apps/RokuRTerm.py'

# Directory commands
alias ..='cd ..'

# ls commands
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -l'

# I'm not sure how many ways I really need to exit the terminal
alias q="exit"
alias qa="exit"

# Git commands
alias g="git"
alias gs="git status"

# General comands
alias die="sudo shutdown -P now"

# APT commands
alias aptup="sudo apt-get update && sudo apt-get upgrade"
alias aptin="sudo apt-get install"

# Project status script
alias pstat='~/dotfiles/scripts/project_status'
