#!/bin/bash

if [ $# -eq 1 ]; then
  action="$1"
else
  action=$(echo -e 'lock\nsleep\nshutdown\nreboot' | wofi --dmenu --insensitive --prompt 'power/lock')
fi

case "$action" in
  "lock")
    swaylock --color 000000
    ;;
  "sleep")
    sync && swaylock --color 000000 --daemonize && systemctl suspend
    ;;
  "shutdown")
    confirm-de 'shutdown now?' && sync && poweroff
    ;;
  "reboot")
    confirm-de 'reboot now?' && sync && reboot
    ;;
  *)
    exit 1
    ;;
esac
