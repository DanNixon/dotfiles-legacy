	name = Dan Nixon
[color]
	ui = true
[core]
  editor = vim
[alias]
  s = status
  p = push
  m = merge
  l = log --pretty=oneline --graph --abbrev-commit
  la = log --pretty=full --graph
  com = commit
  co = checkout
  br = branch
  tags = tag -l
  brs = branch --list
  stl = stash list
  up = fetch -p
  upp = !"git fetch -p; git pull"
  rad = add -u
  unbugger = reset --hard HEAD
  test-pr = !"f() { git fetch origin pull/$1/merge:pr/$1-merged && git checkout pr/$1-merged; }; f"
  cla = clean -ixd
[merge]
  conflictstyle = diff3
[push]
  default = current
