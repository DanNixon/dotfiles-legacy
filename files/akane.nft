#!/usr/sbin/nft -f

table inet filter {
    include "/etc/nftables.conf.d/chain-input-default.nft"
    include "/etc/nftables.conf.d/chain-forward-drop.nft"
    include "/etc/nftables.conf.d/chain-output-accept.nft"

    include "/etc/nftables.conf.d/chain-input-ssh.nft"
    include "/etc/nftables.conf.d/chain-input-syncthing.nft"

    chain input-host {
        jump input-ssh
        jump input-syncthing
    }
}
